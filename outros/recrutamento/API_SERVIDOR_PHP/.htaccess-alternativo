# .htaccess SIMPLIFICADO
# Use este se o .htaccess original não funcionar

# Habilitar RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /recrutamento/api/
    
    # Redirecionar tudo que não é arquivo real para api.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ api.php/$1 [L,QSA]
</IfModule>

# Se mod_rewrite não estiver disponível, descomente estas linhas:
# ErrorDocument 404 /recrutamento/api/api.php

# Headers de segurança
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevenir acesso a arquivos sensíveis
<FilesMatch "^(config\.php|database\.sql)$">
    Require all denied
</FilesMatch>

# Cache control
<FilesMatch "\.php$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>
